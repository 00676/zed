{
    "theme": "cave-dark",
    "buffer_font_family": "Zed Mono",
    "buffer_font_size": 15,
    "vim_mode": false,
    "hover_popover_enabled": true,
    "projects_online_by_default": true,
    "enable_language_server": true,
    "autosave": "off",
    "format_on_save": "language_server",
    "preferred_line_length": 80,
    "soft_wrap": "none",
    "hard_tabs": false,
    "tab_size": 4,
    "languages": {
        "Plain Text": {
            "soft_wrap": "preferred_line_length"
        },
        "C": {
            "tab_size": 2
        },
        "C++": {
            "tab_size": 2
        },
        "Go": {
            "tab_size": 4,
            "hard_tabs": true
        },
        "Markdown": {
            "soft_wrap": "preferred_line_length"
        },
        "Rust": {
            "tab_size": 4
        },
        "JavaScript": {
            "tab_size": 2
        },
        "TypeScript": {
            "tab_size": 2
        },
        "TSX": {
            "tab_size": 2
        }
    }
}
